{% extends 'NumaCCCAdminBundle::aceLayout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/bundles/whiteoctoberpagerfanta/css/pagerfantaDefault.css') }}" type="text/css" media="all" />
{% endblock %}
{% block content %}
    <h1>Dispatchcard</h1>

    <table class="record_properties table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Dateorder</th>
                <td>{{ entity.dateorder|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Po</th>
                <td>{{ entity.po }}</td>
            </tr>
            <tr>
                <th>Serv_type</th>
                <td>{{ entity.servtype }}</td>
            </tr>
            <tr>
                <th>Call_in_buy</th>
                <td>{{ entity.callinbuy }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('dispatchcard') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('dispatchcard_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
