{% extends 'NumaCCCAdminBundle::aceLayout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 widget-box">
            <div class="widget-header widget-header-large">
                <h4 class="widget-title">Custom Rates List</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main">

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Rates</th>
                            <th>Pdf</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for customRate in customRates %}
                            <tr>
                                <td>
                                    <a href="{{ path('customrate_show', { 'id': customRate.id }) }}">{{ customRate.id }}</a>
                                </td>
                                <td>{{ customRate.name }}</td>
                                <td>{{ customRate.description }}</td>
                                <td>{{ customRate.writeRates }}</td>
                                <td><a href="{{ app.request.getSchemeAndHttpHost() }}/{{ customRate.getWebPath() }}">{{ customRate.src}}</a></td>
                                <td>
                                    <ul class="list-unstyled">
                                        <li>
                                            <a href="{{ path('customrate_edit', { 'id': customRate.id }) }}" class="btn btn-primary">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('customrate_new') }}" class="btn btn-primary">Create a new entry</a>

{% endblock %}
