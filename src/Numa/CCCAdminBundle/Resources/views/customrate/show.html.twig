{% block body %}
    <h1>CustomRate</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customRate.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customRate.name }}</td>
            </tr>
            <tr>
