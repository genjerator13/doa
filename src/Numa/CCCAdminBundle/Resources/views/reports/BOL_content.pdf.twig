                    <td width="25%"><span width="100%" class="input-quoter">{% if(origin.timeFlag) %}{{origin.getDeliveryTime()|date("H:i")}}{%else%}&nbsp;{% endif%}<sppan></td>
                                </tr>
                                <tr  class="higher">
                                    <td width="20%">Pickup Contact</td>
                                    <td width="25%"><span width="100%" class="input-quoter">{{origin.getContactPerson()}}</span></td>
                                    <td width="10%"></td>
                                    <td width="20%">Time Order Placed</td>
                                    <td width="25%"><span width="100%" class="input-quoter">{%if (dispatchcard.dateCreated is not empty) %}{{dispatchcard.getDateCreated()|date("Y-m-d H:i")}}{% endif %}</span></td>
