                    <td width="5%"></td>
                    <td width="10%"><strong>Probill#:</strong></td>
                    <td width="25%"><strong>{{dispatchcard.getId()}}</strong></td>
                </tr>
                <tr >
                    <td width="15%">Customer Charged</td>
                    <td width="30%"><span width="100%" class="input-quoter">{% if dispatchcard.customer %} {{dispatchcard.customer.getName()}} {%endif%}</span></td>
                    <td width="12%">Customer Code</td>
                    <td width="2%"><span width="100%" class="input-quoter">{% if dispatchcard.customer %} {{dispatchcard.customer.getCustcode()}}{%endif%}</td>
                    <td width="6%">&nbsp;</td>
                    <td width="10%">&nbsp;</td>
                    <td width="25%">&nbsp;</td>
                </tr>
                <tr >
                    <td width="15%">Service Type</td>
                    <td width="25%"><span width="100%" class="input-quoter">{{dispatchcard.getServType()}}</span></td>
                    <td width="10%"></td>
                    <td width="5%"></td>
                    <td width="5%"></td>

                    <td width="15%">Po#:<strong></td>
                    <td width="25%"><span width="100%" class="input-quoter">{{destination.getPo()}}</span></td>
                </tr>
                <tr >
                    <td width="15%">Call in By:</td>
                    <td width="25%"><span width="100%" class="input-quoter">{{dispatchcard.getCallInBuy()}}</span></td>
                    <td width="10%"></td>
                    <td width="10%"></td>
                    <td width="10%"></td>

                    <td width="5%">&nbsp;</td>
                    <td width="25%">&nbsp;</td>
                </tr>
            </table>
            <hr>
            <table width="100%"  border="0" style="position: relative">
                <tr  class="higher">
                    <td width="20%"><strong>Pickup Building / Business</strong></td>
                    <td width="25%"><span width="100%" class="input-quoter">
                            <span>
                                <strong>                           
                                {{origin.getBuildingBusiness()}}                           
                                </strong>
                            </span>
                    </td>
                    <td width="10%"></td>
                    <td width="20%">Driver Pickup Time:</td>
                    <td width="25%"><span width="100%" class="input-quoter">&nbsp;</span></td>
