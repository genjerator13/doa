                                        <td width="25%">&nbsp;</td>
                                        <td width="10%">&nbsp;</td>
                                        <td width="45%" colspan="2">
                                            <table width="100%">
                                                <tr>
                                                    <td width="25%">Pieces:</td>
                                                    <td width="25%"><span width="100%" class="input-quoter">{{destination.getPieces()}}</span></td>
                                                    <td width="25%">Weight:</td>
                                                    <td width="25%"><span width="100%" class="input-quoter">{{destination.getWeight()}}</span></td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>

                                </table>
                                <hr>
                                <table width="100%"  border="0">                
                                    <tr >
                                        <td width="15%">COD Amount: $</td>
                                        <td width="5%">&nbsp;<span width="100%" class="input-quoter">{{destination.getCodAmount()}}</span></td>
                                        <td width="20%">Returned COD Signature</td>
                                        <td width="30%"><span width="100%" class="input-quoter">&nbsp;</span></td>
                                        <td width="5%">&nbsp;</td>
                                        <td width="15%">Returned COD Date</td>
                                        <td width="10%"><span width="100%" class="input-quoter">&nbsp;</span></td>
                                    </tr>                
                                </table>
                                <hr>
                                <table width="100%"  border="0">
                                    <tr  class="higher">
                                        <td width="7%">Driver #</td>
                                        <td width="15%"><span width="100%" class="input-quoter">&nbsp;</span></td>

                                        <td width="78%" colspan="3"></td>

                                    </tr>
                                    <tr  class="higher">
                                        <td width="20%" colspan="2">Driver Name: (please print)</td>

                                        <td width="29%" colspan="2"><span width="100%" class="input-quoter">&nbsp;</span></td>
                                        <td width="20%">Driver Signature:</td>
                                        <td width="30%"><span width="100%" class="input-quoter">&nbsp;</span></td>

                                    </tr>                
                                </table>
                                <hr>
                                <table width="100%"  border="0">
                                    <tr class="higher">
                                        <td width="25%">Shipper Name: (please print)</td>
                                        <td width="25%"><span width="100%" class="input-quoter">&nbsp;</span></td>
                                        <td width="30%"><span class="highlight">Shipper Signature:</span></td>
                                        <td width="20%"><span class="highlight moveleft">X</span><span width="100%" class="input-quoter highlight"></span></td>

                                    </tr>   
                                    <tr class="higher">
                                        <td width="25%" >Receiver Name: (please print)</td>
                                        <td width="25%" ><span width="100%" class="input-quoter">&nbsp;</span></td>
                                        <td width="30%"><span class="highlight">Receiver Signature:</span></td>
                                        <td width="20%"><span class="highlight moveleft">X</span><span width="100%" class="input-quoter highlight"></span></td>

                                    </tr>
                                    <tr class="higher">
                                        <td width="100%" colspan="7">Commodity / Instructions:<br><br>{{destination.getComments()}}</td>                    
