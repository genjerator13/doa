{% extends 'NumaDOAAdminBundle::layout.html.twig' %}
 
{% block content %}
    <h1>Category list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sid</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sid }}</td>
                <td>{{ entity.name }}</td>
                <td>

                        <a href="{{ path('categories_show', { 'id': entity.id }) }}" class="btn btn-primary">show</a>

                        <a href="{{ path('categories_edit', { 'id': entity.id }) }}"  class="btn btn-primary">edit</a>

                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
