{% extends 'NumaDOAAdminBundle::layout.html.twig' %}
 
{% block content %}
    <div class="box box-default">
        <h1>Category list</h1>

        <div class="box-header">

            <div class="box-tools">
                <a href="{{ path('categories_new') }}" class="btn btn-primary">
                    Create New Category
                </a>
            </div>
        </div>

        <div class="box-body table-responsive no-padding">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Sid</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.sid }}</td>
                        <td>{{ entity.name }}</td>
                        <td>
                            <a href="{{ path('categories_edit', { 'id': entity.id }) }}"
                               class="btn btn-primary">edit</a>

                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
