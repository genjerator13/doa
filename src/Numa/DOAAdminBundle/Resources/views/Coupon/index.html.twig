{% extends 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>Coupon list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dealer_id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Discount</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('coupon_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dealerid }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.photo }}</td>
                <td>{{ entity.discount }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('coupon_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('coupon_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('coupon_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
