{% extends app.request.get('_dashboard')=='DMS'
? 'NumaDOADMSBundle::layout.html.twig'
: 'NumaDOAAdminBundle::layout.html.twig' %}
 {% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block content %}
    <h1>Image Carousel Edit</h1>

    {{ form(edit_form) }}

    {% if(app.request.get('_dashboard')=='DMS') %}
        <a href="{{ path('component_edit', { 'id': entity.componentId() }) }}" class="btn btn-primary">
            Back to the component edit
        </a>
    {% else %}
        <a href="{{ path('imagecarousel') }}" class="btn btn-primary">
            Back to the carousel
        </a>
    {% endif %}

{% endblock %}
