{% extends 'NumaDOAAdminBundle::layout.html.twig' %}
 
{% block content %}
    <h1>Importfeed list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sid</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('importfeed_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sid }}</td>
                <td>{{ entity.description }}</td>

                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('importfeed_show', { 'id': entity.id }) }}" class="btn">show</a>
                    </li>
                    <li>
                        <a href="{{ path('importfeed_edit', { 'id': entity.id }) }}" class="btn">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('mapping', { 'id': entity.id }) }}" class="btn">Mapping</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('importfeed_new') }}" class="btn">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
