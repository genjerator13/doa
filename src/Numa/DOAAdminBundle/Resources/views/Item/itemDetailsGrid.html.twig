
<div class="picture_detail">
    <span class="fieldValue fieldValuePictures">
        <a href="#">
                {% if details['Image List'] is empty or details['Image List'][0] is empty  %}
                <img alt="No photos" src="http://www.cjvr.dealersonair.com/admin/../apps/adminPanel/templates/default/_files/no_image_available_small.png">
                {% else %} 
                <img alt="{{details.Year}} {{details.Make}}" src="{{details['Image List'][0]}}" width="100" height="100">
                {%endif%}
            </a>
        </span>
    </div>
    <div class="middle_details">
         <ul>
            <li class="itemdetailtitle">{{details.Year}} {{details.Make}}</li>
            <li>Listing ID # {{details.id}} in the category "{{details.category}} "</li>
            <li>Posted by {{details.username}} </li>
            <li class="actionSelector">
                <a href="#" class="caption">Actions</a>
                <ul class="actionList" style="">
                    <li><a href="#">Add a comment</a></li>
                    {% if details.active==1   %}
                    <li><a href="{{path('items_deactivate', {'id': details.id}) }}">Deactivate</a></li>
                    {%else%}
                    <li><a href="{{path('items_activate', {'id': details.id}) }}">Activate</a></li>
                    {%endif%}
                                        {% if details.moderation_status==1   %}
                    <li><a href="{{path('items_reject', {'id': details.id}) }}">Reject</a></li>
                    {%else%}
                    <li><a href="{{path('items_approve', {'id': details.id}) }}">Approve</a></li>
                    {%endif%}
                    <li><a href="{{path('items_edit', {'id': details.id}) }}">Edit</a></li>
                    <li><a href="{{path('items_delete', {'id': details.id}) }}">Delete</a></li>
                </ul>
                <div class="clear"></div>
        </ul>
    </div>
    <div class="right_details">
        <ul>
            <li>
                <span class="fieldValue fieldValueActive active">{% if details.active==1   %}<span class="active">Active</span>{%else%}<span class="inactive">Inactive</span>{%endif%}</span> 
                and <span class="fieldValue fieldValueModerationStatus approved">{% if details.moderation_status==1   %}<span class="approved">Approved</span> {%else%}<span class="rejcted">Rejected</span>{%endif%}</span>							</li>
            <li>{{details['Image List']|length}} pictures</li>            
            <li>{{details.views}} views</li>
            <li>Activated on {% if details.activation_date is defined   %}{{details.activation_date}}{%endif%}</li>
        </ul>
    </div>
<div class="clear"></div>