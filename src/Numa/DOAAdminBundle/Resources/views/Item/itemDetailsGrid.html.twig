
<div class="picture_detail">
    <span class="fieldValue fieldValuePictures">
        <a href="#">
                {% if details['Image List'] is empty  %}
                <img alt="No photos" src="http://www.cjvr.dealersonair.com/admin/../apps/adminPanel/templates/default/_files/no_image_available_small.png">
                {% else %} 
                <img alt="{{details.Year}} {{details.Make}}" src="{{details['Image List'][0]}}" width="100" height="100">
                {%endif%}
            </a>
        </span>
    </div>
    <div class="middle_details"
         <ul>
            <li class="itemdetailtitle">{{details.Year}} {{details.Make}}</li>
            <li>Listing ID # {{details.id}} in the category "{{details.category}} "</li>
            <li>Posted by {{details.username}} </li>
            <li class="actionSelector">
                <a href="#" class="caption">Actions</a>
                <ul class="actionList" style="">
                    <li><a href="#">Add a comment</a></li>
                    <li><a href="#">Deactivate</a></li>
                    <li><a href="#">Reject</a></li>
                    <li><a href="#">Edit</a></li>
                    <li><a href="#">Delete</a></li>
                </ul>
                <div class="clear"></div>
        </ul>
    </div>
    <div class="right_details">
        <ul>
            <li>
                <span class="fieldValue fieldValueActive active">{% if details.active==1   %}Active {%else%}Inactive{%endif%}</span> 
                and <span class="fieldValue fieldValueModerationStatus approved">{{details.moderation_status}}</span>							</li>
            <li>0 pictures</li>
            <li>0 comments</li>
            <li>{{details.views}} views</li>
            <li>Activated on {{details.activation_date}}</li>
        </ul>
    </div>
<div class="clear"></div>