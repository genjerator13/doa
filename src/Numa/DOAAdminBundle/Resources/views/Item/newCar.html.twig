        <button id="vin_submit_button" type="button" class="vin btn btn-success">Decode Vin</button>
    </div>
    <script>
        $('#vin_submit_button').click(function(){
            vin = $('#numa_doaadminbundle_item_VIN').val();
            console.log(vin);
            $.ajax({
                type: "POST",
                url: "{{ path("decode_vin_api") }}",
                data: {vin:vin}
            });
        });
    </script>
