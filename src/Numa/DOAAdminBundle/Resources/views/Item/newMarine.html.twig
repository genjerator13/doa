{% block content %}
    <div class="form-group">
        {{ form_label(form.make) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.make) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.model) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.model) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.retail_price) }}
        <div class="col-sm-9">
            {{ form_widget(form.retail_price) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.price) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.price) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.stockNr) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.stockNr) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.type, 'Boat Type', { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}  
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.length) }}
        <div class="col-sm-9">
            {{ form_widget(form.length) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.beam) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.beam) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.weight, 'Boat Weight') }}
        <div class="col-sm-9">                            
            {{ form_widget(form.weight) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.hullDesign) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.hullDesign) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.driveType, 'Drive Type', { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.driveType, { 'attr': {'class': 'form-control'} }) }}  
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.engine, 'Engine Type', { 'label_attr': {'class': 'col-sm-3'} }) }}   
        <div class="col-sm-9">                            
            {{ form_widget(form.engine, { 'attr': {'class': 'form-control'} }) }}  
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.horsepower) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.horsepower) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.fuelType, 'Fuel Type', { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.fuelType, { 'attr': {'class': 'form-control'} }) }}  
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.transmission, null, { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.transmission, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.exteriorColor, null, { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.exteriorColor, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.interiorColor, null, { 'label_attr': {'class': 'col-sm-3'} }) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.interiorColor, { 'attr': {'class': 'form-control'} }) }}  
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.passengers) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.passengers) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.trailer) }}
        <div class="col-sm-9">                            
            {{ form_widget(form.trailer) }}
        </div>
    </div>
{% endblock %}
