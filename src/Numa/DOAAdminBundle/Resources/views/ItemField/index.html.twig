{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ItemField list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Item_id</th>
            <th>Field_name</th>
            <th>Field_type</th>
            <th>Field_string_value</th>
            <th>Field_boolean_value</th>
            <th>Field_integer_value</th>
            <th>Field_datetime_value</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('itemfield_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.itemid }}</td>
                <td>{{ entity.fieldname }}</td>
                <td>{{ entity.fieldtype }}</td>
                <td>{{ entity.fieldstringvalue }}</td>
                <td>{{ entity.fieldbooleanvalue }}</td>
                <td>{{ entity.fieldintegervalue }}</td>
                <td>{% if entity.fielddatetimevalue %}{{ entity.fielddatetimevalue|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('itemfield_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('itemfield_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('itemfield_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
