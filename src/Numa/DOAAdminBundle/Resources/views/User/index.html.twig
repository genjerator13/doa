{% extends 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content %}
    <h1>User list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>User group</th>
                <th>Registration_date</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Dealershipname</th>
                <th>Address</th>
                <th>City</th>
                <th>Postalcode</th>
                <th>Phonenumber</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.usergroup }}</td>
                <td>{% if entity.registrationdate %}{{ entity.registrationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.FirstName }}</td>
                <td>{{ entity.LastName }}</td>
                <td>{{ entity.DealershipName }}</td>
                <td>{{ entity.Address }}</td>
                <td>{{ entity.City }}</td>
                <td>{{ entity.PostalCode }}</td>
                <td>{{ entity.PhoneNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
