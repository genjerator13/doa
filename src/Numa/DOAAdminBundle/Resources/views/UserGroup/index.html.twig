{% extends app.request.get('_dashboard')=='DMS'
? 'NumaDOADMSBundle::layout.html.twig'
: 'NumaDOAAdminBundle::layout.html.twig' %}
{% block content %}

    <div class="box box-default">
        <h1>UserGroup list</h1>

        <div class="box-header">
            <div class="box-tools">
                <a href="{{ path('user_group_new') }}" class="btn btn-primary">
                    Create a new entry
                </a>
            </div>
        </div>
        <div class="box-body table-responsive no-padding">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            {% if(app.request.get('_dashboard')=='DMS') %}
                                <a href="{{ path('dms_user_group_edit', { 'id': entity.id }) }}">{{ entity.id }}</a>
                            {% else %}
                                <a href="{{ path('user_group_edit', { 'id': entity.id }) }}">{{ entity.id }}</a>
                            {% endif %}
                        </td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.regformtemplate }}</td>
                        <td>{{ entity.description }}</td>
                        <td>
                            {% if(app.request.get('_dashboard')=='DMS') %}
                                <a href="{{ path('dms_user_group_edit', { 'id': entity.id }) }}" class="btn btn-primary">Edit</a>
                            {% else %}
                                <a href="{{ path('user_group_edit', { 'id': entity.id }) }}" class="btn btn-primary">Edit</a>
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
