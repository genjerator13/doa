{% extends 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content %}

    <div class="box box-default">
        <h1>UserGroup list</h1>

        <div class="box-header">
            <div class="box-tools">
                <a href="{{ path('user_group_new') }}" class="btn btn-primary">
                    Create a new entry
                </a>
            </div>
        </div>
        <div class="box-body table-responsive no-padding">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('user_group_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.regformtemplate }}</td>
                        <td>{{ entity.description }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('user_group_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
