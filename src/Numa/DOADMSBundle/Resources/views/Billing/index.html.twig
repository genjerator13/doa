    {% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content -%}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Billing list</h3>
        <div class="box-tools">

                        <a href="{{ path('billing_new') }}" class="btn btn-primary">
                            Create a new Billing
                        </a>
                    </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer_id</th>
                <th>Date_created</th>
                <th>Date_updated</th>
                <th>Status</th>
                <th>Totalamt</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('billing_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.customerid }}</td>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.totalAMT }}</td>
                <td>{{ entity.comments }}</td>
                <td><ul>
        <li>
            <a href="{{ path('billing_show', { 'id': entity.id }) }}">show</a>
        </li>
        <li>
            <a href="{{ path('billing_edit', { 'id': entity.id }) }}">edit</a>
        </li>
</ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
