{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Billing</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Customer_id</th>
            <td>{{ entity.customerid }}</td>
        </tr>
        <tr>
            <th>Date_created</th>
            <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Date_updated</th>
            <td>{{ entity.dateupdated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>Totalamt</th>
            <td>{{ entity.totalAMT }}</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>{{ entity.comments }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('billing') }}" class="btn btn-primary">
        Back to the list
    </a>


    <a href="{{ path('billing_edit', { 'id': entity.id }) }}" class="btn btn-default">
        Edit
    </a>

{% endblock %}
