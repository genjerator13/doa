{% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content -%}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">DealerGroup list</h3>
        <div class="box-tools">

            <a href="{{ path('dealergroup_new') }}" class="btn btn-primary">
                Create a new Dealer Group
            </a>
        </div>
        {% include 'NumaDOAAdminBundle::flashmsg.html.twig' %}
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
                <th>Dealers</th>
                <th>Date_created</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('dealergroup_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.Dealer|join(', ') }}</td>
                    <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('dealergroup_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i
                                            class="glyphicon glyphicon-edit"></i>Edit</a>
                            </li>
                            <li>
                                <a href="{{ path('dealergroup_delete', { 'id': entity.id }) }}" class="btn btn-danger" data-confirm="Dealer Group <strong>{{ entity.username }}</strong> will be deleted.<br>Are you sure you want to delete it?" >
                                    <i class="glyphicon glyphicon-remove"></i>Delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% include 'NumaDOAAdminBundle::deleteConfirm.js.twig' %}
    {% endblock %}
