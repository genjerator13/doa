{% extends 'NumaDOADMSBundle::layout.html.twig' %}
 
{% block content %}
    {% set dealerid = 0 %}
    {% if(dealer is defined and dealer is not empty) %}
        {% set dealerid = dealer.id %}
    {% endif %}
    <div class="box box-default">
