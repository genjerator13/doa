{% extends 'NumaDOADMSBundle::layout.html.twig' %}
 
{% block content %}
    <div class="page-header">
        <h1>Dashboard</h1>
    </div>

    <div class="row">
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>{{ stats.totalListings }}</h3>
                </div>
                <div class="icon">
                    <i class="fa fa-truck"></i>
                </div>
                <a class="small-box-footer" href="
                {% if is_granted('ROLE_SALE2_DMS') or is_granted('ROLE_WHOLESALE_DMS') or is_granted('ROLE_SALE4_DMS') %}
                    {{ path('inventory_view') }}
                {% else %}
                    {{ path('inventory') }}
                {% endif %}
                ">
                    Listings
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>{{ pages }}</h3>
                </div>
                <div class="icon">
                    <i class="fa fa-laptop"></i>
                </div>
                <a class="small-box-footer" href="{{ path('dms_page') }}">
                    Pages
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>{{ customers }}</h3>
                </div>
                <div class="icon">
                    <i class="fa fa-users"></i>
                </div>
                <a class="small-box-footer" href="{{ path('customer') }}">
                    Customers
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>&nbsp;
                    </h3>
                </div>
                <div class="icon">
                    <i class="fa fa-pencil-square-o"></i>
                </div>
                <a class="small-box-footer" href="{{ path('component') }}">
                    Content
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-purple">
                <div class="inner">
                    <h3>&nbsp;
                    </h3>
                </div>
                <div class="icon">
                    <i class="fa fa-list-ol"></i>
                </div>
                <a class="small-box-footer" href="{{ path('billing') }}">
                    Bill of Sale
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-xs-6">
            <div class="small-box bg-olive">
                <div class="inner">
                    <h3>&nbsp;
                    </h3>
                </div>
                <div class="icon">
                    <i class="fa fa-money"></i>
                </div>
                <a class="small-box-footer" href="{{ path('billing_new_no_customer') }}">
                    Create Bill of Sale
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
    </div>
    {#{% if not is_granted('ROLE_ADMIN') %}#}
        {% include 'NumaDOADMSBundle:Default:websiteForms.html.twig' %}
    {#{% endif %}#}

    {% include 'NumaDOADMSBundle:Default:reminders.html.twig' %}

    {% include 'NumaDOADMSBundle:Default:stats.html.twig' %}

    {% if is_granted('ROLE_DMS_USER') or is_granted('ROLE_ADMIN') or is_granted('ROLE_DEALER_PRINCIPAL') %}
        {% include 'NumaDOADMSBundle:Default:saleStats.html.twig' %}
    {% endif %}

    {% include 'NumaDOADMSBundle:Default:googleAnalytics.html.twig' %}
{% endblock %}