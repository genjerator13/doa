<div class="box box-warning{% if incomingReminders is empty and passedReminders is empty %} collapsed-box {% endif %}">
    <div class="box-header with-border">
        <h3 class="box-title">Reminders</h3>
        <div class="box-tools pull-right">
            <button class="btn btn-box-tool" data-widget="collapse" type="button">
                <i class="fa fa-{% if incomingReminders is empty and passedReminders is empty %}plus{% else %}minus{% endif %}"></i>
            </button>
            <button class="btn btn-box-tool" data-widget="remove" type="button">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
    <div class="box-body" style="display: {% if incomingReminders is empty and passedReminders is empty %}none{% else %}block{% endif %};">
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Incoming Reminders (next 30 days)</h3>
                    {#<div class="box-tools pull-right">#}
                        {#<button class="btn btn-box-tool" data-widget="collapse" type="button">#}
                            {#<i class="fa fa-minus"></i>#}
                        {#</button>#}
                        {#<button class="btn btn-box-tool" data-widget="remove" type="button">#}
                            {#<i class="fa fa-times"></i>#}
                        {#</button>#}
                    {#</div>#}
                </div>
                <div class="box-body" style="display: block;">
                    <div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Customer Name</th>
                                <th>Date</th>
                                <th>Item</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for incomingReminder in incomingReminders %}
                                <tr>
                                    <td>
                                        <a href="{{ path('reminder_show', { 'id': incomingReminder.id }) }}">{{ incomingReminder.id }}</a>
                                    </td>
                                    <td>{{ incomingReminder.Customer.name }}</td>
                                    <td>{{ incomingReminder.date|date('Y-m-d') }}</td>
                                    <td>{{ incomingReminder.ReminderItem }}</td>
                                    <td>
                                        <a href="{{ path('reminder_show', { 'id': incomingReminder.id }) }}"
                                           class="btn btn-primary">Show</a>
                                        <a href="{{ path('reminder_edit', { 'id': incomingReminder.id }) }}"
                                           class="btn btn-primary">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="box-footer clearfix" style="display: block;">
                    {#<a class="btn btn-sm btn-info btn-flat pull-left" href="javascript:void(0)">Place New Order</a>#}
                    {#<a class="btn btn-sm btn-default btn-flat pull-right" href="javascript:void(0)">View All Orders</a>#}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Passed Reminders (last 30 days)</h3>
                    {#<div class="box-tools pull-right">#}
                        {#<button class="btn btn-box-tool" data-widget="collapse" type="button">#}
                            {#<i class="fa fa-minus"></i>#}
                        {#</button>#}
                        {#<button class="btn btn-box-tool" data-widget="remove" type="button">#}
                            {#<i class="fa fa-times"></i>#}
                        {#</button>#}
                    {#</div>#}
                </div>
                <div class="box-body" style="display: block;">
                    <div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Customer Name</th>
                                <th>Date</th>
                                <th>Item</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for passedReminder in passedReminders %}
                                <tr>
                                    <td>
                                        <a href="{{ path('reminder_show', { 'id': passedReminder.id }) }}">{{ passedReminder.id }}</a>
                                    </td>
                                    <td>{{ passedReminder.Customer.name }}</td>
                                    <td>{{ passedReminder.date|date('Y-m-d') }}</td>
                                    <td>{{ passedReminder.ReminderItem }}</td>
                                    <td>
                                        <a href="{{ path('reminder_show', { 'id': passedReminder.id }) }}"
                                           class="btn btn-primary">Show</a>
                                        <a href="{{ path('reminder_edit', { 'id': passedReminder.id }) }}"
                                           class="btn btn-primary">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="box-footer clearfix" style="display: block;">
                    {#<a class="btn btn-sm btn-info btn-flat pull-left" href="javascript:void(0)">Place New Order</a>#}
                    {#<a class="btn btn-sm btn-default btn-flat pull-right" href="javascript:void(0)">View All Orders</a>#}
                </div>
            </div>
        </div>
        <div class="box-footer clearfix" style="display: {% if incomingReminders is empty and passedReminders is empty %}none{% else %}block{% endif %};">
            {#<a class="btn btn-sm btn-info btn-flat pull-left" href="javascript:void(0)">Place New Order</a>#}
            {#<a class="btn btn-sm btn-default btn-flat pull-right" href="javascript:void(0)">View All Orders</a>#}
        </div>
    </div>
</div>
