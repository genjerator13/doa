{% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content %}
    <h1>Site Forms</h1>

<div class="nav-tabs-custom">
    <div class="tab-content">
    <table class="record_properties">
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ entity.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Customer</th>
                <td>{{ entity.custname }} {{ entity.custlastname }}</td>
            </tr>
            {% if entity.custofficer is not null %}
            <tr>
                <th>Sales Person</th>
                <td>{{ entity.custofficer }}</td>
            </tr>
            {% endif %}
            {% if entity.contactby is not null %}
            <tr>
                <th>Contact By</th>
                <td>
                    {% if entity.contactby == 0 %}
                        <i class="glyphicon glyphicon-envelope"></i>
                    {% else %}
                        <i class="glyphicon glyphicon-earphone"></i>
                    {% endif %}
                </td>
            </tr>
            {% endif %}
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            {% if entity.datedrive is not null %}
            <tr>
                <th>Date drive</th>
                <td>{{ entity.datedrive|date('Y-m-d H:i') }}</td>
            </tr>
            {% endif %}

            {% if entity.model is not null %}
                <tr>
                    <th>Model</th>
                    <td>{{ entity.model }}</td>
                </tr>
            {% endif %}

            {% if entity.make is not null %}
                <tr>
                    <th>Make</th>
                    <td>{{ entity.make }}</td>
                </tr>
            {% endif %}

            {% if entity.kilometers is not null %}
                <tr>
                    <th>Kilometers</th>
                    <td>{{ entity.kilometers }}</td>
                </tr>
            {% endif %}

            {% if entity.accesories is not null %}
                <tr>
                    <th>Accessories</th>
                    <td>{{ entity.accesories }}</td>
                </tr>
            {% endif %}

            {% if entity.comment is not null %}
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
            {% endif %}
            {#<tr>#}
                {#<th>Dealer_id</th>#}
                {#<td>{{ entity.dealerid }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Customer_id</th>#}
                {#<td>{{ entity.customerid }}</td>#}
            {#</tr>#}
            {#<tr>#}
                {#<th>Item_id</th>#}
                {#<td>{{ entity.itemid }}</td>#}
            {#</tr>#}
            <tr>
                <th>Date Submited</th>
                <td>{{ entity.datecreated|date('Y-m-d H:i') }}</td>
            </tr>
            {#<tr>#}
                {#<th>Date_updated</th>#}
                {#<td>{{ entity.dateupdated|date('Y-m-d H:i:s') }}</td>#}
            {#</tr>#}
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        
        <a href="{{ path('listingform') }}" class="btn btn-primary" >
            Back to the list
        </a>

    </div>
</div>

        {#<a href="{{ path('listingform_edit', { 'id': entity.id }) }}" class="btn btn-default">#}
            {#Edit#}
        {#</a>#}

{% endblock %}
