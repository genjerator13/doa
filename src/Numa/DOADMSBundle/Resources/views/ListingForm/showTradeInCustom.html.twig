{% block content %}

            {% if (entity.image1 is defined and  entity.image1 is not empty) or
                  (entity.image2 is defined and  entity.image2 is not empty) or
                  (entity.image3 is defined and  entity.image3 is not empty)
            %}
                <div class="uploaded-images">
                    {% if (entity.image1 is defined and  entity.image1 is not empty) %}
                        <a href="{{ asset(entity.image1) }}">
                            
                            <img src="{{ asset(entity.image1) }}" height="250px" />
                        </a>
                    {% endif %}
                    {% if (entity.image2 is defined and  entity.image2 is not empty) %}
                        <a href="{{ asset(entity.image2) }}">

                            <img src="{{ asset(entity.image2) }}" height="250px" />
                        </a>
                    {% endif %}
                    {% if (entity.image3 is defined and  entity.image3 is not empty) %}
                        <a href="{{ asset(entity.image3) }}">

                            <img src="{{ asset(entity.image3) }}" height="250px" />
                        </a>
                    {% endif %}
                </div>
            {% endif %}

            <table class="record_properties">
                <tbody>

                <tr>
                    <th>Customer</th>
                    <td>{{ entity.custname }} {{ entity.custlastname }}</td>
                </tr>

                {% if entity.contactby is not null %}
                    <tr>
                        <th>Contact By</th>
                        <td>
                            {% if entity.contactby == 0 %}
                                <i class="glyphicon glyphicon-envelope"></i>
                            {% else %}
                                <i class="glyphicon glyphicon-earphone"></i>
                            {% endif %}
                        </td>
                    </tr>
                {% endif %}
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ entity.phone }}</td>
                </tr>
                {% if entity.make is not null %}
                    <tr>
                        <th>Trade in Make</th>
                        <td>{{ entity.make }}</td>
                    </tr>
                {% endif %}
                {% if entity.model is not null %}
                    <tr>
                        <th>Trade in Model</th>
                        <td>{{ entity.model }}</td>
                    </tr>
                {% endif %}
                {% if entity.year is not null %}
                    <tr>
                        <th>Trade in Year</th>
                        <td>{{ entity.year }}</td>
                    </tr>
                {% endif %}
                {% if entity.kilometers is not null %}
                    <tr>
                        <th>Trade in Kilometers</th>
                        <td>{{ entity.kilometers }}</td>
                    </tr>
                {% endif %}
                {% if entity.accessories is not null %}
                    <tr>
                        <th>Conditional & Reconditioning Required</th>
                        <td>{{ entity.accessories }}</td>
                    </tr>
                {% endif %}
                {% if entity.comment is not null %}
                    <tr>
                        <th>Accidental History</th>
                        <td>{{ entity.comment }}</td>
                    </tr>
                {% endif %}
                {% if entity.special is not null %}
                    <tr>
                        <th>Special Options</th>
                        <td>{{ entity.special }}</td>
                    </tr>
                {% endif %}

                <tr>
                    <th>Date datecreated</th>
                    <td>{{ entity.datecreated|date('Y-m-d H:i') }}</td>
                </tr>

                {% if entity.status is not null %}
                <tr>
                    <th>Status</th>
                    <td>{{ entity.status }}</td>
                </tr>
                {% endif %}

                </tbody>
            </table>


            <a href="{{ path('listingform') }}" class="btn btn-primary">
                Back to the list
            </a>

{% endblock %}
