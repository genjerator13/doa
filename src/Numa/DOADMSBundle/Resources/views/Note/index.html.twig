    {% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content -%}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Note list</h3>
        <div class="box-tools">
            
                        <a href="{{ path('note_new') }}" class="btn btn-primary">
                            Create a new Note
                        </a>
                    </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer_id</th>
                <th>Subject</th>
                <th>Notes</th>
                <th>Date_remind</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('note_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.customerid }}</td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.notes }}</td>
                <td>{% if entity.dateremind %}{{ entity.dateremind|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td><ul>
        <li>
            <a href="{{ path('note_show', { 'id': entity.id }) }}">show</a>
        </li>
        <li>
            <a href="{{ path('note_edit', { 'id': entity.id }) }}">edit</a>
        </li>
</ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
