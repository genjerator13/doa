{% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content %}

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Integration with QuickBooks</h3>
        </div>
        <div class="box-body table-responsive">
            {% if addedVendors is not empty %}
                <h2>Inserted Vendor{% if vendor|length>1 %}s{% endif %} into QB</h2>
                <ul class="list-inline">
                    {% for vendor in addedVendors %}
                        <li>
                            <div class="well">
                                <div><strong>Vendor {{ loop.index }}:</strong></div>
                                <div><strong>{{ vendor.getCompanyName() }}</strong></div>
                                {#<div>Address: {{ v.getAddress() }}</div>#}
                                {#<div>City: {{ v.getCity() }}</div>#}
                                {#<div>Phone: {{ v.getWorkPhone() }}</div>#}
                                {#<div>Email: {{ v.getEmail() }}</div>#}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if addedExpenseAccount is not empty %}
                <h2>Inserted Expense Account{% if vendor|length>1 %}s{% endif %} into QB</h2>
                <ul class="list-inline">
                    {% for account in addedExpenseAccount %}
                        <li>
                            <div class="well">
                                <div><strong>A {{ loop.index }}:</strong></div>
                                <div><strong>{{ account.getName() }}</strong></div>
                                <div><strong>{{ account.getAccountType() }}</strong></div>
                                {#<div>Address: {{ v.getAddress() }}</div>#}
                                {#<div>City: {{ v.getCity() }}</div>#}
                                {#<div>Phone: {{ v.getWorkPhone() }}</div>#}
                                {#<div>Email: {{ v.getEmail() }}</div>#}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if addedIncomeAccount is not empty %}
                <h2>Inserted Income Account{% if vendor|length>1 %}s{% endif %} into QB</h2>
                <ul class="list-inline">
                    {% for account in addedIncomeAccount %}
                        <li>
                            <div class="well">
                                <div><strong>A {{ loop.index }}:</strong></div>
                                <div><strong>{{ account.getName() }}</strong></div>
                                <div><strong>{{ account.getAccountType() }}</strong></div>
                                {#<div>Address: {{ v.getAddress() }}</div>#}
                                {#<div>City: {{ v.getCity() }}</div>#}
                                {#<div>Phone: {{ v.getWorkPhone() }}</div>#}
                                {#<div>Email: {{ v.getEmail() }}</div>#}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if addedAssetAccount is not empty %}
                <h2>Inserted Asset Account{% if vendor|length>1 %}s{% endif %} into QB</h2>
                <ul class="list-inline">
                    {% for account in addedAssetAccount %}
                        <li>
                            <div class="well">
                                <div><strong>A {{ loop.index }}:</strong></div>
                                <div><strong>{{ account.getName() }}</strong></div>
                                <div><strong>{{ account.getAccountType() }}</strong></div>
                                {#<div>Address: {{ v.getAddress() }}</div>#}
                                {#<div>City: {{ v.getCity() }}</div>#}
                                {#<div>Phone: {{ v.getWorkPhone() }}</div>#}
                                {#<div>Email: {{ v.getEmail() }}</div>#}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            {% if QBPOs is not empty %}
                <h2>Purchase orders Successfully Inserted into Quickbooks</h2>
                <table class="table table-striped table-hover">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Total</th>
                    </tr>
                    {% for po in QBPOs %}
                        <tr>
                            <td>{{ po.getId() }}</td>
                            <td>{{ po.getDocNumber() }}</td>
                            <td>{{ po.getTotalAmt() }}</td>
                        </tr>
                        <tr>
                            {% for line in po.getSalesItemLineDetail() %}
                                <table class="table table-striped table-hover">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                    </tr>
                                    <tr>
                                        <td>{{ line.getId() }}</td>
                                        <td>{{ line.getTitle() }} :{{ line.getName() }}</td>
                                        <td>{{ line.getDescription() }}</td>
                                        <td>{{ line.getAmount() }}</td>
                                    </tr>
                                </table>
                            {% endfor %}

                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
    </div>
{% endblock %}

