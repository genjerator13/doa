{% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content -%}
    <h1>Reminder</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Customer Name</th>
            <td>{{ entity.Customer.getFullName() }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ entity.comment }}</td>
        </tr>
        <tr>
            <th>Reminder Item</th>
            <td>{{ entity.ReminderItem }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('reminder') }}" class="btn btn-primary">
        Back to the list
    </a>


    <a href="{{ path('reminder_edit', { 'id': entity.id }) }}" class="btn btn-default">
        Edit
    </a>

{% endblock %}
