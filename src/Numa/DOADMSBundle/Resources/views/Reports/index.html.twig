{% extends 'NumaDOADMSBundle::layout.html.twig' %}
{% block content -%}
    <div class="box">
        <div class="box-header">
            {% if app.session.flashBag.has('danger') %}
                <div class="alert alert-danger">
                    {% for msg in app.session.flashBag.get('danger') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
            <h3 class="box-title">Report list</h3>
            <div class="box-tools">
            </div>
        </div>
        <form class="col-md-12">
            Date From:
            <input class="datepicker" name="dateFrom" value="{{ date_start }}">
            Date To:
            <input class="datepicker" name="dateTo" value="{{ date_end }}">

            <button class="btn btn-success" type="submit" name="filter">Filter</button>

            <a href="{{ path('billing') }}" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-usd"></span>Billings
            </a>
            <div class="col-md-12">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DMS_USER') or is_granted('ROLE_DEALER_PRINCIPAL') %}
                    <button class="btn btn-info" type="submit" name="purchase">
                        <i class="glyphicon glyphicon-file"></i>
                        Purchase Report
                    </button>
                    <button class="btn btn-info" type="submit" name="sales">
                        <i class="glyphicon glyphicon-file"></i>
                        Sales Report
                    </button>
                    <button class="btn btn-info" type="submit" name="salesCommision">
                        <i class="glyphicon glyphicon-file"></i>
                        Sales Commision Report
                    </button>
                    <button class="btn btn-info" type="submit" name="unitProfit">
                        <i class="glyphicon glyphicon-file"></i>
                        Unit Profit Report
                    </button>
                    <button class="btn btn-info" type="submit" name="unitRevenue">
                        <i class="glyphicon glyphicon-file"></i>
                        Unit Revenue Report
                    </button>
                    <button class="btn btn-info" type="submit" name="unitSalesCost">
                        <i class="glyphicon glyphicon-file"></i>
                        Unit Sales Cost Report
                    </button>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DMS_USER') or is_granted('ROLE_DEALER_PRINCIPAL') or is_granted('ROLE_SALES') or is_granted('ROLE_SALE3_DMS') %}
                    <button class="btn btn-info" type="submit" name="inventory">
                        <i class="glyphicon glyphicon-file"></i>
                        Inventory Report
                    </button>
                    <button class="btn btn-info" type="submit" name="inventoryPhoto">
                        <i class="glyphicon glyphicon-file"></i>
                        Inventory Report with Photo
                    </button>
                {% endif %}
                <button class="btn btn-info" type="submit" name="inventoryShort">
                    <i class="glyphicon glyphicon-file"></i>
                    Inventory Report - Sales Copy
                </button>
                <button class="btn btn-info" type="submit" name="workOrder">
                    <i class="glyphicon glyphicon-file"></i>
                    Work Orders Sales
                </button>
            </div>
        </form>

        {#<button class="btn btn-info" href="{{ path("billing_report_xls",{'id': dealer.id}) }}"><i class="glyphicon glyphicon-file"></i>Excel</button>#}
        {% if billings is empty %}
            <div>No Results</div>
        {% else %}

            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Invoice Date</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Vin</th>
                        <th>Stock Number</th>
                        {#<th>Comments</th>#}
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for billing in billings %}
                        <tr>
                            <td><a href="{{ path('dms_items_edit', { 'id': billing.id }) }}">{{ billing.id }}</a></td>
                            <td>{% if billing.getSale().getInvoiceDate() %}{{ billing.getSale().getInvoiceDate()|date('Y-M-d') }}{% endif %}</td>
                            <td>{{ billing.Make }}</td>
                            <td>{{ billing.Model }}</td>
                            <td>{{ billing.Year }}</td>
                            <td>{{ billing.Vin }}</td>
                            <td>{{ billing.stockNR }}</td>

                            {#<td>{{ billing.comments }}</td>#}
                            <td>
                                <a href="{{ path('dms_items_edit', { 'id': billing.id }) }}"
                                   class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i>Edit</a>
                                <a href="{{ path('sale_print_inside', { 'id': billing.id }) }}"
                                   class="btn btn-primary"><i class="glyphicon glyphicon-list-alt"></i>Pdf</a>
                                {#<a href="{{ path('sale_delete', { 'id': billing.saleId,"redirect":"dms_reports" }) }}"#}
                                {#class="btn btn-danger"#}
                                {#data-confirm="Unit Profit Report for listing # <strong>{{ billing.id }}</strong> will be deleted.<br>Are you sure you want to delete it?">#}
                                {#<i class="glyphicon glyphicon-remove"></i>Delete</a>#}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
    {#{% include 'NumaDOAAdminBundle::deleteConfirm.js.twig' %}#}
    <script>
        $(function () {
            $(".datepicker").datepicker({dateFormat: 'yy-mm-dd'});
        });
    </script>
{% endblock %}
