    col-sm-8
{%- endblock form_group_class %}
</div>
<div class="row form-horizontal">
    <h1>UNIT PROFIT REPORT</h1>


    <div class="col-md-7">
        {{ form_row(form.Vendor) }}
        {{ form_row(form.sales_person) }}
    </div>
    <div class="col-md-5">
        {{ form_row(form.stock_nr) }}
        {{ form_row(form.vin) }}
