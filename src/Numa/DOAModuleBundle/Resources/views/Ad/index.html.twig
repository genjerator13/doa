{% extends 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content -%}
<div class="box box-default">
    {% include 'NumaDOAAdminBundle::flashmsg.html.twig' %}
    <h1>Ads list</h1>
    <a href="{{ path('ad_new') }}" class="btn btn-default">
        Create a new entry
    </a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Position</th>
                <th>Status</th>
                <th>Photo</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.photo }}</td>
                <td>{{ entity.body }}</td>
                <td>
                <ul>

                    <li>
                        <a href="{{ path('ad_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
    {% endblock %}
