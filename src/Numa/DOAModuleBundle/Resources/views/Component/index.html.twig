    {% extends 'NumaDOADMSBundle::layout.html.twig' %}

{% block content -%}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Component list</h3>
        <div class="box-tools">
            
                        <a href="{{ path('component_new') }}" class="btn btn-primary">
                            Create a new Component
                        </a>
                    </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Page_id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Value</th>
                <th>Settings</th>
                <th>Date_updated</th>
                <th>Date_created</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('component_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.pageid }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.value }}</td>
                <td>{{ entity.settings }}</td>
                <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td><ul>
        <li>
            <a href="{{ path('component_show', { 'id': entity.id }) }}">show</a>
        </li>
        <li>
            <a href="{{ path('component_edit', { 'id': entity.id }) }}">edit</a>
        </li>
</ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
