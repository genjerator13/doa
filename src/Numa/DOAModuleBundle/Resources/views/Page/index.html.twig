{% extends 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content -%}
<div class="box box-default">
    <h1>Pages list</h1>
    <a href="{{ path('page_new') }}" class="btn btn-default">
        Create a new entry
    </a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Keywords</th>
            <th>Title</th>
            <th>Url</th>
            <th>Is_public</th>
            <th>Autogenerate</th>
            <th>Active</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.keywords }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.ispublic }}</td>
                <td>{{ entity.autogenerate }}</td>
                <td>{{ entity.active }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('page_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
