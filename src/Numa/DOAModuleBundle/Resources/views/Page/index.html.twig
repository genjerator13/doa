{% extends app.request.get('_dashboard')=='DMS'
? 'NumaDOADMSBundle::layout.html.twig'
: 'NumaDOAAdminBundle::layout.html.twig' %}

{% block content -%}
<div class="box box-default">
    {% include 'NumaDOAAdminBundle::flashmsg.html.twig' %}
    <h1>Pages list</h1>
    <a href="{{ path('page_new') }}" class="btn btn-default">
        Create a new entry
    </a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Keywords</th>
            <th>Title</th>
            <th>Url</th>
            <th>Link</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.keywords }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.url }}</td>
                <td><a href="{{ entity.url }}" targt="_blank">Link to page</a></td>
                {#<td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                {#<td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                <td>
                    <a href="{{ path('page_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
