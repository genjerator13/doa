{% extends app.request.get('_dashboard')=='DMS'
? 'NumaDOADMSBundle::layout.html.twig'
: 'NumaDOAAdminBundle::layout.html.twig' %}
{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block content %}
    <div class="box box-default">
        <h1>Setting edit</h1>

        {{ form(edit_form) }}

        <ul class="record_actions">
            <li>
                {% if(app.request.get('_dashboard')=='DMS') %}
                <a href="{{ path('dms_settings') }}" class="btn btn-default">
                    Back to the list
                </a>
                {% else %}
                <a href="{{ path('setting') }}" class="btn btn-default">
                    Back to the list
                </a>
                {% endif %}
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
{% endblock %}
