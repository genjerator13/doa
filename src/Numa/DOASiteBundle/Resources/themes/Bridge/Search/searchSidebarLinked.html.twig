    </div>
{% endif %}

{% if year is defined %}
    <div>Year</div>
    <div>
        <ul>
            {% for item in year %}
                <li><a href="{{ path('search_by_year',{'year':item['value']}) }}">{{ item['value'] }}
                        ( {{ item['count'] }}
                        )</a></li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

