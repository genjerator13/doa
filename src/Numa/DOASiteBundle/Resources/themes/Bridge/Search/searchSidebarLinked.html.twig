{% if bodyStyle is defined %}
    <div>Bodystyle</div>
    <div>
        <ul>
            {% for item in bodyStyle %}
                <li>
                    <a href="{{ path('search_only_by_body_style',{'categorySubType':item['value']}) }}">{{ item['value'] }}
