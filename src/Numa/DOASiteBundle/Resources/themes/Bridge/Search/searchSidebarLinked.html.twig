{% if make is defined %}
    <div id="makes" class="">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div href="#collapseMakes"
                         data-toggle="collapse">
                        <a class="collapsed">Makes</a>
                        <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
                    </div>
                </div>
            </div>
        </div>
        <div id="collapseMakes" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="row">
                    <ul>
                        {% for item in make %}
                            <li><a href="{{ path('search_by_make',{'make_string':item['value']}) }}">{{ item['value'] }}
                                    ( {{ item['count'] }} )</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
