{% import "NumaDOASiteBundle::components.html.twig" as component %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta id="meta" name="viewport" content="width=device-width; initial-scale=1.0"/>

    <title>Dealers on Air</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">

        {% stylesheets '@theme_forest_css'  filter='cssrewrite' output='css/*.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>

    {% endblock %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        {% javascripts '@bootstrapx_js' 'js/jssor/jssor.slider.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery(".mobile-menu ul ul").hide();
                /* hide sublinks */
                jQuery(".separator").click(function () {
                    jQuery(this).next().slideToggle(300);
                    /* display sublinks */
                });
            });
        </script>

    {% endblock %}
    {% block bodyBackground %}
        {% include "NumaDOASiteBundle::bodyBg.html.twig" %}
    {% endblock %}
</head>

<body>

<div id="wrapper">

    <div class="header-wrapper">


        {% block header %}
            {% include 'NumaDOASiteBundle::headline.html.twig' %}
        {% endblock %}

        {% block mainmenu %}
            {% include 'NumaDOASiteBundle::mainmenu.html.twig' %}
        {% endblock %}

        {% block mobilemenu %}
            {% include 'NumaDOASiteBundle::mobilemenu.html.twig' %}
        {% endblock %}

    </div>

    <div class="content-wrapper">
        <div class="banner">
            {% block banner %}
            <div class="image">
                {% image '@NumaDOASiteBundle/Resources/Public/Forest/images/banner.jpg' %}
                <img src="{{ asset_url }}"/>
                {% endimage %}
            </div>
            {% endblock %}
            {% block featuredads %}
            {% endblock %}
        </div>
        <div class="button-wrapper">
            <div class="button b1">
                <a href="{{ path("search_new_vehicle") }}">
                    <h2>New Units <span>Click Here</span></h2>
                </a>
            </div>

            <div class="button b2">
                <a href="{{ path("search_used_vehicle") }}">
                    <h2>Pre-Owned <span>Click Here</span></h2>
                </a>
            </div>

            <div class="button b3">
                <a href="{{ path("finance_form") }}">
                    <h2>Financing <span>In House</span></h2>
                </a>
            </div>

            <div class="button b4">
                <a href="{{ path("part_form") }}">
                    <h2>Parts <span>and Service</span></h2>
                </a>
            </div>
        </div>
        {% block content %}
        <div class="content-wrapper">
            {{ displayComponent('page_content',"HTML") }}
        </div>
        {% endblock %}
    </div>


    {% block footer %}
        {% include 'NumaDOASiteBundle::footer.html.twig' %}
    {% endblock %}

</div>
</body>
</html>