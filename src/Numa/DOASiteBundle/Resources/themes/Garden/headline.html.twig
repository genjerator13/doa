        <div class="address">{% if dealer is defined %}{{ dealer.address }} &middot; {{ dealer.city }}, {{ dealer.state }}{% endif %}</div>
    </div>

    <div class="logo">
        <a class="logo" href="{{ path("homepage") }}">
            {{ component.image(dealer.logoUrl, dealer.name, '', 'sea_logo_home') }}
