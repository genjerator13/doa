{% import "NumaDOASiteBundle::components.html.twig" as component %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    {% include 'NumaDOASiteBundle::favicons.html.twig' %}
    {% include 'NumaDOASiteBundle::metatags.html.twig' %}
    {% block stylesheets %}

        {% stylesheets '@bootstrap'  'bundles/numadoasite/GreenBridge/css/bridge.css'  filter='cssrewrite' output='css/*.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>
        {% if(SettingsThemeService.isCentralAuto()) %}
            <style>
                .colorblock-section {
                    height: 350px;
                }
            </style>
            {{ dealer.metaCSS|raw }}
        {% endif %}
    {% endblock %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        {% javascripts '@bootstrapx_js' "bundles/numadoasite/GreenBridge/js/mobilemenu.js" %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
        {{ dealer.metaJS|raw }}
    {% endblock %}
    {% block ga %}
        {% include "NumaDOASiteBundle::ga.html.twig" %}
    {% endblock %}
    {% include "NumaDOASiteBundle::google_tag_head.html.twig" %}
    {% block fecebook_pixel %}
        {{ include("NumaDOASiteBundle::facebookPixel.html.twig") }}
    {% endblock %}
</head>

<body>

{% include "NumaDOASiteBundle::google_tag_body.html.twig" %}
<header class="site-header">


    {% block headline %}
        {% include 'NumaDOASiteBundle::headline.html.twig' %}
    {% endblock %}

    {% block mainmenu %}
        {% include 'NumaDOASiteBundle::mainmenu.html.twig' %}
    {% endblock %}

    {% block mobilemenu %}
        {% include 'NumaDOASiteBundle::mobilemenu.html.twig' %}
    {% endblock %}

</header>
{% set imgBg = displayComponent('homepage_image_top','Image','dealer','GreenBridge',{"output":"src"}) %}
{% set imgBgStyle = '' %}

{% if imgBg is not empty %}
    {% set imgBgStyle = 'style="background-image: url(\''~imgBg|raw~'\')"' %}
{% endif %}

{% set imgBg2 = displayComponent('homepage_image_bottom','Image','dealer','GreenBridge',{"output":"src"}) %}
{% set imgBgStyle2 = '' %}
{% if imgBg2 is not empty %}
    {% set imgBgStyle2 = 'style="background-image: url(\''~imgBg2|raw~'\')"' %}
{% endif %}
{% include 'NumaDOASiteBundle::notepad.html.twig' %}
<main class="site-content">
    <section class="splash">

        <div class="carousel-bottom">
            {{ displayComponent("homepage_carousel","carousel",'page','GreenBridge',{"image_size":"green_bridge_carousel_wide", "class":"homepage_carousel"})|raw }}
            <div class="container buttons">
                <div class="col-md-5th-1 col-sm-4 col-md-offset-0 col-sm-offset-2">{{ displayComponent('home_button1','html','dealer')|raw }}</div>
                <div class="col-md-5th-1 col-sm-4">{{ displayComponent('home_button2','html','dealer')|raw }}</div>
                <div class="col-md-5th-1 col-sm-4">{{ displayComponent('home_button3','html','dealer')|raw }}</div>
                <div class="col-md-5th-1 col-sm-4">{{ displayComponent('home_button4','html','dealer')|raw }}</div>
                <div class="col-md-5th-1 col-sm-4">{{ displayComponent('home_button5','html','dealer')|raw }}</div>
            </div>
        </div>

    </section>
    <section class="darker">
        <div class="container welcome-text">
            <div class="row">
                <div class="content-block">
                     {% block content %}
                     {% endblock %}
                </div>
            </div>
    </section>
    <section class="financing">
        <div class="block">
            <figure class="fade-slide">
                <div class="container-fluid">
                    <h2>Get the Green Light for Car Financing!</h2>
                    <p>Wondering about car financing? We’ll give your credit the Green Light and get you behind the
                        wheel! Visit our Finance Department to learn more about our great used car financing options and
                        flexible auto financing rates for bad credit. If you’re worried about bad credit, there’s no
                        need: we offer car financing for all credit backgrounds. Get qualified for a low percent
                        financing rate and fill out our online credit application today!</p>

                    <a href="https://creditonline.dealertrack.ca/Web/Default.aspx?Token=7881dd5c-580f-40f3-94bd-1b56319a617a&amp;Lang=en"
                       class="btn btn-bridge-green">Apply for Financing</a>
                </div>
            </figure>
        </div>
        <div class="block rightblock">
        </div>
    </section>
    <section class="above-map">
        <div class="container">
            {{ displayComponent('text_above_map',"HTML",'dealer','GreenBridge') }}
        </div>
    </section>
    {% include 'NumaDOASiteBundle::map.html.twig' %}

    {% block footer %}
        {% include 'NumaDOASiteBundle::footer.html.twig' %}
    {% endblock %}
</main>

</body>
</html>