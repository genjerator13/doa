{% set liclass="" %}

    {% if item.getBodyStyle() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Body Style: </span>
            <span class="fieldValue fieldValue-status">{{ item.getBodyStyle() }}</span>
        </li>
    {% endif %}
    {% if item.getStockNr() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Stock Number: </span>
            <span class="fieldValue fieldValue-status">{{ item.getStockNr() }}</span>
        </li>
    {% endif %}
    {% if item.getMileage() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Mileage: </span>
            <span class="fieldValue fieldValue-status">{{ item.getMileage() }}</span>
        </li>
    {% endif %}
    {% if item.getExteriorColor() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Exterior Color: </span>
            <span class="fieldValue fieldValue-status">{{ item.getExteriorColor() }}</span>
        </li>
    {% endif %}
