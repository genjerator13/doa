    <script>

        ajaxSearch = function () {
            $("#sidebarSearch").submit();
        }
        $(document).on('change', '#sidebarSearch select', function () {
            ajaxSearch();
        });
        $(document).on('change', '#sidebarSearch input', function () {
            ajaxSearch();
        });


    </script>
    <script>
        $(document).ready(function () {

            var itemid;
            $(".eprice").on('click', function () {

                var modal = $('#eprice_modal');
                itemid = $(this).data('itemid');
                console.log(itemid);
                modal.on('show.bs.modal', function () {
                    $('#eprice_modal .modal-body').load('/item/' + itemid + '/eprice');
                }).modal();
            });

            $('#submit_eprice').click(function (e) {
                e.preventDefault();
                var form = $('#eprice_form').serializeArray();

                $.ajax({
                    type: "POST",
                    data: form,
                    url: '{{ path("listting_form_post",{"form":'eprice' }) }}',
                    success: function (data) {
                        if (data.message == 'error') {
                            $(".eprice_error").html(data.action);
                        } else {
                            $('#eprice_modal').modal('toggle');
                            $('.alertz').html("Successfully sent eprice form.");
                            $('.alertz').addClass("alert-success");
                            $('.alertz').removeClass("dontshow");
                            $('.alertz').show();
                            setTimeout(function () {
                                $('.alertz').fadeOut(1000);
                            }, 3000);
                        }
                    }
                })
            })
        });

    </script>
