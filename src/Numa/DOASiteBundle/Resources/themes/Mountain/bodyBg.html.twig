{% block bodyBackground %}
    <style type="text/css">
        {% set imgBg = displayComponent('mountain_site_background','Image','dealer','mountain',{"output":"src"})   %}
        {% set bcgColor = settingsService.getStripped("background_color") %}

        {% if imgBg is not empty or bcgColor is not empty %}
        body {
            {% if imgBg is not empty %}background-image: url("{{ imgBg }}");{% endif %}
            {% if bcgColor is not empty %} background-color: {{ bcgColor }}; {% endif %}
        }

        {% endif %}
    </style>
{% endblock %}