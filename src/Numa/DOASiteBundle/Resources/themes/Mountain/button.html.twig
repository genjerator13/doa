{% import "NumaDOASiteBundle::components.html.twig" as component %}

<div class="button {% if image is empty %}b{{ num }}{% endif %} col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <a href=" {% if image is not empty and image.url is  defined %}{{ image.url }}{% else %}#{% endif %}"
       class="">
        <div class="button-text">
            {% if image is not empty and image.carouselText is defined %}
                <h2>{{ image.carouselText|striptags('<span>')|raw }}</h2>
                <div class="click-here">Click Here</div>
            {% endif %}
        </div>
        {% if image is not empty and image is not empty and image.src is defined %}
            {#{{ component.image(image.src, 'btn'~num, '', 'mountain_button',"100%","auto") }}#}
            {% if "upload/dealers" in image.src %}
                {{ component.image(image.src, 'btn'~num, '', 'mountain_button') }}
            {% else %}
                {{ component.image("/upload/dealers/"~image.src, 'btn'~num, '', 'mountain_button') }}
            {% endif %}
        {% endif %}
    </a>
</div>