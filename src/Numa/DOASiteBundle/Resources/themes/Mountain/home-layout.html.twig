            {% if(components is defined) %}
                {{ displayComponent(components,'page_content') }}
            {% endif %}
        </div>

    </div>

    {% block footer %}
        {% include 'NumaDOASiteBundle::footer.html.twig' %}
    {% endblock %}

</div>
</body>
</html>