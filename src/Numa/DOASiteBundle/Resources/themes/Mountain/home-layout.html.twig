{% import "NumaDOASiteBundle::components.html.twig" as component %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta id="meta" name="viewport" content="width=device-width; initial-scale=1.0"/>

    <title>Dealers on Air</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">

        {% stylesheets '@theme_mountain_css'  filter='cssrewrite' output='css/*.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700' rel='stylesheet' type='text/css'>

    {% endblock %}

    {% block javascripts %}
        {% javascripts '@bootstrapx_js' 'js/jssor/jssor.slider.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery(".mobile-menu ul ul").hide();
                /* hide sublinks */
                jQuery(".separator").click(function () {
                    jQuery(this).next().slideToggle(300);
                    /* display sublinks */
                });
            });
        </script>

    {% endblock %}
</head>

<body>
<div id="wrapper">
    {% block header %}
        {% include 'NumaDOASiteBundle::headline.html.twig' %}
    {% endblock %}
    {% block main %}
        {% include 'NumaDOASiteBundle::mainmenu.html.twig' %}
    {% endblock %}
    {% block mobile %}
        {% include 'NumaDOASiteBundle::mobilemenu.html.twig' %}
    {% endblock %}
    <div class="container">

        <div class="button-wrapper">

            <div class="button b1">

                <a href="{{ path("search_new_vehicle") }}">

                    <h2><span>Shop for</span> New RVs</h2>

                    <div class="click-here">Click Here</div>

                </a>

            </div>

            <div class="button b2">

                <a href="{{ path("search_used_vehicle") }}">

                    <h2><span>Shop for</span> Pre-Owned</h2>

                    <div class="click-here">Click Here</div>

                </a>

            </div>

            <div class="button b3">

                <a href="{{ path("finance_form") }}">

                    <h2><span>Apply for</span> Financing</h2>

                    <div class="click-here">Click Here</div>

                </a>

            </div>

            <div class="button">

                <div class="b4">

                    <a href="{{ path("part_form") }}">

                        <h2>Parts</h2>

                        <div class="click-here">Click Here</div>

                    </a>

                </div>

                <div class="b5">

                    <a href="{{ path("service_form") }}">

                        <h2>Service</h2>

                        <div class="click-here">Click Here</div>

                    </a>

                </div>

            </div>

        </div>
    {% block browse %}
        <div class="browse">

            <ul>
                <li><h2><span>Browse</span> by Type</h2></li>
                <li><a class="motorhome" href="{{ path('search_by_rvs_type',{'category': 'rvs','rvsTypeSlug': 'motorhome'}) }}">Motorhome</a></li>
                <li><a class="travel-trailer" href="{{ path('search_by_rvs_type',{'category': 'rvs','rvsTypeSlug': 'Travel Trailer'}) }}">Travel Trailer</a></li>
                <li><a class="fifth-wheel" href="{{ path('search_by_rvs_type',{'category': 'rvs','rvsTypeSlug': '5th Wheel'}) }}">Fifth Wheel</a></li>
                <li><a class="toy-hauler" href="">Toy Hauler</a></li>
                <li><a class="park-models" href="">Park Models</a></li>
            </ul>

        </div>
    {% endblock %}
    {% block banner %}

        {#<div class="banner"><img src="images/banner.jpg" /></div>#}
        {#<div class="banner">#}

            <div class="image">
                {% image '@NumaDOASiteBundle/Resources/Public/Mountain/images/banner.jpg' %}
                <img src="{{ asset_url }}" alt="Example"/>
                {% endimage %}
            </div>

        </div>
    {% endblock %}
        <div class="content">

            <h1>Welcome to Generic Company</h1>

            <h3>Learn About Us</h3>

