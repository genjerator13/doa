<table class="table table-striped">
    <tbody>
    <tr class="">
        <td class="table-col-1" colspan="2">Make & Model: </td>
    </tr>
    <tr class="">
        <td class="makeModel" style="
        border-top: none;
        padding-left: 3rem;
        font-size: 1.6em;
        line-height: 170%;
        letter-spacing: -.02em;
        word-spacing: .03em;
        text-rendering: optimizeLegibility;
" colspan="2">{{ item.getMake() }} {{ item.getModel() }}</td>
    </tr>
    <tr class="">
        <td class="table-col-1">Body Type:</td>
        <td class="table-col-2" itemprop="bodyType">{{ item.getBodyStyle() }}</td>
    </tr>
    {#<tr class="">#}
        {#<td class="table-col-1">Type:</td>#}
        {#<td class="table-col-2" itemprop="bodyType">{{ item.getTruckVanType()|capitalize }}</td>#}
    {#</tr>#}
    <tr class="">
        <td class="table-col-1">Kilometers:</td>
        <td class="table-col-2">{{ item.getMileage() }}</td>
    </tr>
    <tr class="">
        <td class="table-col-1">Transmission:</td>
        <td class="table-col-2">{{ item.getTransmission() }}</td>
    </tr>
    <tr class="">
        <td class="table-col-1">Engine:</td>
        <td class="table-col-2">{{ item.getEngine }}</td>
    </tr>
    <tr class="">
        <td class="table-col-1">Exterior Colour:</td>
        <td class="table-col-2">{{ item.getExteriorColor() }}</td>
    </tr>
    <tr class="">
        <td class="table-col-1">Stock #:</td>
        <td class="table-col-2">{{ item.getStockNr() }}</td>
    </tr>
    </tbody>
</table>
