<div class="row">
    {% if pagerfanta is not empty %}

    {#<div class="saved-search col-md-4">#}
        {#<a data-toggle="modal" data-target="#saveSearch"><i class="glyphicon glyphicon-floppy-disk"></i>Save#}
        {#this Search</a>#}
