{% set liclass="col-md-12 col-xs-12 col-sm-12 col-lg-12" %}

    {% if item.getType() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Boat Type: </span>
            <span class="fieldValue fieldValue-status">{{ item.getType() }}</span>
        </li>
    {% endif %}

    {% if item.getStockNr() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Stock Number: </span>
            <span class="fieldValue fieldValue-status">{{ item.getStockNr() }}</span>
        </li>
    {% endif %}

    {% if item.getHullDesign() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Hull Design: </span>
            <span class="fieldValue fieldValue-status">{{ item.getHullDesign() }}</span>
        </li>
    {% endif %}

    {% if item.getLength() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Length (ft): </span>
            <span class="fieldValue fieldValue-status">{{ item.getLength() }}</span>
        </li>
    {% endif %}

    {% if item.getEngine() is not empty %}
        <li class="{{ liclass }}">
            <span class="fieldCaption field-status">Engine Type: </span>
            <span class="fieldValue fieldValue-status">{{ item.getEngine() }}</span>
        </li>
    {% endif %}

