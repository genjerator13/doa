<style>
    .right-side-ads {
        width: 130px;
    }

    .right-side-ad {
        border: 1px solid red;
        height: 130px;
        width: 130px;
        margin-bottom: 22px;;
        overflow: hidden;
        display: block;
    }

    .size2{
        height: 282px;
    }

    body {
        margin: 0;
    }

</style>
<div class="right-side-ads">

    {% for ad in ads %}
        <a class="right-side-ad {{ ad.size }}"  href="{{ ad.url }}">
            <div class="ad-title">{{ ad.name }}</div>
            <div class="ad-body">{{ ad.body }}</div>
            {% if(ad.photo is not empty) %}
                <img src="{{ ad.photo|imagine_filter('ad_130x130') }}" alt="{{ ad.name }}"/>
            {% endif %}
        </a>
    {% endfor %}
</div>