{% extends 'NumaDOASiteBundle::listing-layout.html.twig' %}
{#{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', _self] %}#}
{#{% block form_label_class -%}#}
    {#col-sm-3#}
{#{%- endblock form_label_class %}#}
{#{% block form_group_class -%}#}
    {#col-sm-7#}
{#{%- endblock form_group_class %}#}
{% block content %}
    {#{% set dealer = getDealer() %}#}
    {#{{ displayComponent('page_content',"HTML")|raw }}#}
    <p>To estimate your monthly payments, please enter your amounts in the boxes provided.</p>

    <script language="javascript" type="text/javascript" src="/fckimages/global.js"></script>

    <div class="FinanceCalculatorBox">
        <div class="CalculatePayment">
            <div class="CalculatorHeader">
                <div> Calculate Payment</div>
            </div>
            <div class="CalculatorMiddle">
                <div class="OverviewCalc">
                    Use this calculator if you know the price of your vehicle
                    <br>
                    and need to estimate the Monthly Payment.
                    <br>
                    <br>
                    Start below by entering your Desired Vehicle Price.
                </div>
                <div class="DesiredPrice">
                    <div class="InputLabel">
                        <div> *Desired Vehicle Price:</div>
                        <input id="desiredPrice" name="Desired Vehicle Price" onkeyup="javascript:PaymentCalculator();" value="" type="text">
                    </div>
                </div>
                <div class="CalculatorInput">
                    <div class="InputLabel">
                        <div> Sales Tax:</div>
                        <input id="salesTax1" name="Sales Tax" onblur="CalculatorPopulateField(this, '0'); AddPercentToNumeric(this); PaymentCalculator();" onfocus="AddPercentToNumeric(this); CalculatorClearField(this, '0');" onkeyup="javascript:PaymentCalculator();" value="6.25%" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div> *Term in Months:</div>
                        <input id="term1" name="Term in Months" onblur="CalculatorPopulateField(this, '36'); PaymentCalculator();" onfocus="CalculatorClearField(this, '36');" onkeyup="javascript:PaymentCalculator();" value="36" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div> *Rate / APR:</div>
                        <input id="rate1" name="Rate / APR" onblur="CalculatorPopulateField(this, '7'); AddPercentToNumeric(this); PaymentCalculator();" onfocus="AddPercentToNumeric(this); CalculatorClearField(this, '7');" onkeyup="javascript:PaymentCalculator();" value="7%" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div class="CalculatorLabel">
                            Down Payment or
                            <br>
                            Trade-In Value:
                        </div>
                        <input id="downPayment1" name="Down Payment or Trade-In Value" onblur="CalculatorPopulateField(this, '0'); PaymentCalculator();" onfocus="CalculatorClearField(this, '0');" onkeyup="javascript:PaymentCalculator();" value="0" type="text">
                    </div>
                    <div class="clearall">  </div>
                </div>
                <div class="Line">  </div>
                <div class="Estimated">
                    <div> Estimated Monthly Payment:</div>
                    <div id="monthlyPayment" class="CalculatedValue">$0.00</div>
                </div>
                <div class="clearall">  </div>
                <div class="Required"> * = Required</div>
            </div>
        </div>
        <div class="AffordabilityCalculator">
            <div class="CalculatorHeader">
                <div> Affordability Calculator</div>
            </div>
            <div class="CalculatorMiddle">
                <div class="OverviewCalc">
                    Use this calculator if you know the monthly payment
                    <br>
                    you can afford and need to estimate the Vehicle Price.
                    <br>
                    <br>
                    Start below by entering your Desired Monthly Payment.
                </div>
                <div class="DesiredPrice">
                    <div class="InputLabel">
                        <div> *Desired Monthly Payment:</div>
                        <input id="desiredPayment" name="Desired Monthly Payment" onkeyup="javascript:AffordabilityCalculator();" value="" type="text">
                    </div>
                </div>
                <div class="CalculatorInput">
                    <div class="InputLabel">
                        <div> Sales Tax:</div>
                        <input id="salesTax2" name="Sales Tax" onblur="CalculatorPopulateField(this, '0'); AddPercentToNumeric(this); AffordabilityCalculator();" onfocus=" AddPercentToNumeric(this); CalculatorClearField(this, '0');" onkeyup="javascript:AffordabilityCalculator();" value="6.25%" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div> *Term in Months:</div>
                        <input id="term2" name="Term in Months" onblur="CalculatorPopulateField(this, '36'); AffordabilityCalculator();" onfocus="CalculatorClearField(this, '36');" onkeyup="javascript:AffordabilityCalculator();" value="36" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div> *Rate / APR:</div>
                        <input id="rate2" name="Rate / APR" onblur="CalculatorPopulateField(this, '7'); AddPercentToNumeric(this); AffordabilityCalculator();" onfocus="AddPercentToNumeric(this); CalculatorClearField(this, '7');" onkeyup="javascript:AffordabilityCalculator();" value="7%" type="text">
                    </div>
                    <div class="clearall">  </div>
                    <div class="InputLabel">
                        <div class="CalculatorLabel">
                            Down Payment or
                            <br>
                            Trade-In Value:
                        </div>
                        <input id="downPayment2" name="Down Payment or Trade-In Value" onblur="CalculatorPopulateField(this, '0'); AffordabilityCalculator();" onfocus="CalculatorClearField(this, '0');" onkeyup="javascript:AffordabilityCalculator();" value="0" type="text">
                    </div>
                    <div class="clearall">  </div>
                </div>
                <div class="Line">  </div>
                <div class="Estimated">
                    Estimated Vehicle Price:
                    <div id="estimatedPrice" class="CalculatedValue">$0.00</div>
                </div>
            </div>
            <div class="clearall">  </div>
            <div class="Required"> * = Required</div>
        </div>
    </div>

    <style>
        /* Calculators in Financing*/
        .clearall {min-height: 40px}
        .FinanceCalculatorBox { margin-left:100px; }
        .CalculatePayment { float: left; }
        .AffordabilityCalculator { float: right; margin-right: 105px; }
        .CalculatePayment, .AffordabilityCalculator { background-color: #f5f5f5; width: 325px; border: 3px solid #007cb3; }
        .CalculatorHeader { margin: 2px; }
        .CalculatorHeader, .PaymentCalcButton, .OverviewCalc, .Estimated { text-align: center; }
        .CalculatorHeader div {color: #fff; font-size: 16px; font-weight: bold; padding: 10px 0; }
        .CalculatorHeader, .DesiredPrice, .CalculatorInput { background-color: #007cb3; font-size: 12px; }
        .DesiredPrice { margin: 0 10px 3px; height: 44px; }
        .CalculatorInput { margin: 0 10px; height: 100%; padding: 3px 0; min-height: 150px;}
        .InputLabel input {height: 24px; width: 120px; border: 1px solid #333; font-size: 12px; float: right; margin: 6px 20px 0 0; text-indent: 4px; padding: 2px 0 0 4px; text-indent: 0px; }
        .CalculatedValue { color: #C90000; font-size: 24px; font-weight: bold; margin: 5px 0 16px; }
        .Line {height: 1px; line-height: 1px; font-size: 1px; margin:10px 5px; border-bottom: 1px solid #333; }
        .PaymentCalcButton { cursor:pointer; font-family: Arial; font-weight: bold; font-size: 11px; height: 10px; line-height: 10px; color: #111; }
        .OverviewCalc {margin: 12px auto 14px auto; font-size: 12px; }
        .InputLabel {padding: 5px 0; padding: 5px 0 0 0; color: #E4E4E4; }
        .InputLabel div { float: left; margin: 11px 0 0 0; text-align: right; width: 155px; }
        .Estimated { font-size: 14px; font-weight: bold; margin-top: 3px; }
        .SearchButton {margin: 20px auto; font-size: 14px; }
        .SearchNew { float: left; margin-left: 27px; }
        .SearchUsed { float: right; margin-right: 24px; }
        .SearchNew, .SearchUsed { width: 127px; line-height: 20px; }
        .Required { font-size: 10px; margin: 20px 10px 10px 0; text-align: right; }
        .BottomSpace{ margin: 10px 0; }
        .CalculatorLabel { margin-top: 3px !important; color: #E4E4E4; }
        .OverviewCalc, .Estimated, .Required { color: #444; }
    </style>
{% endblock %}