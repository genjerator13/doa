{% extends 'NumaDOASiteBundle::home-layout.html.twig' %}
{% block content %}

<h2>Business Directory</h2>
<div class="list-group id="myTab">
    {% for cat in categories %}
        
        <a href="{{path('homepage_category', {'idcategory': cat.id,'category_name':cat.name})}}" class="list-group-item col-md-12">
<i class="sprite {{ cat.name|replace({' ': '-'})|lower }}"></i>

            <span class="dealer-category-title">{{cat.name}}   {% if(cat.catalogrecords.count()|length>0) %}({{ cat.catalogrecords.count() }}){% endif %}</span>
            </a>

    {%endfor%}
        </div>
{% endblock %}

