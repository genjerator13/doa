{% block content %}
    {% set images = item.getImages()%}
        {% set desc = item.getMake()~item.getModel()%}
            <div data="{{item.id}}" id="item_{{item.id}}" class="row item-row" url="{{path('item_compare')}}">    
                <div class="col-md-12">
                    <div class="picture-detail">
                        <a href="#">
                            {% if images is empty  %}
                                <img alt="No photos" src="http://www.cjvr.dealersonair.com/admin/../apps/adminPanel/templates/default/_files/no_image_available_small.png" />
                            {% else %} 
                                {% set image = item.getImages()|first["stringvalue"]%}
                                {% if ('http' not in image) %}
                                    <img alt="{{item.getItemFieldByName('year')}} {{desc}}" src="{{image|imagine_filter('search_image')}}" />
                                    {% else %}
                                    <img alt="{{item.getItemFieldByName('year')}} {{desc}}" src="{{image}}" />                                    
                                    {%endif%}
                                    </a>
                                    
                            {% endif %}
                                </div>
                                <div class="shortDetails">
                                    <h4>
                                        <a href="{{path('item_details', {'itemId': item.id, 'description': ""+desc}) }}">
                                            {{item.getItemFieldByName('year')}} {{desc}}
                                        </a>                                    
                                    </h4>

                                    <div>Listing ID # {{item.id}} in the category "{{item.category}} "</div>
                                    <div>Posted by {{item.getUser('username')}} </div>


                                    <span class="glyphicon glyphicon-earphone"> 3388-22134</span>
                                    <br>
                                    <a href="#">View Details</a>
                                    <div class="checkbox-inline">
                                        <label>
                                            <input type="checkbox" class="saveAd"> Save Ad
                                        </label>
                                    </div>
                                    <div class="checkbox-inline">
                                        <label>
                                            <input type="checkbox" class="compareAd"> Compare Ad
                                        </label>
                                    </div>
                                </div>
                                <div class="main-details">
                                    <ul class="list-inline">
                                        <li>{{item.getItemFieldByName('mileage')|number_format(0, '.',',')}}

                                        <li><span class="price">{{item.getItemFieldByName('price')|number_format(0, '.',',')}} $</span></li>
                                        <li>{{item.DateCreated|date('Y-m-d')}}</li>                                        
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="clear"></div>

                        {% endblock %}
