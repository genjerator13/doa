{% set images = item.getImages()%}


                {% if images is empty  %}
                <img alt="No photos" src="http://www.cjvr.dealersonair.com/admin/../apps/adminPanel/templates/default/_files/no_image_available_small.png">
                {% else %} 
                    {% set image = item.getImages()|first["stringvalue"]%}
                <img alt="{{item.getItemFieldByName('year')}} {{item.getItemFieldByName('boat make')}}" src="{{image|imagine_filter('search_image')}}">
                {%endif%}
        <a href="{{path('item_details', {'itemId': item.id, 'description': 'jakis text'}) }}"><h4><b>
                    {{item.getItemFieldByName('year')}} {{item.getItemFieldByName('boat make')}}
                </b></h4></a>
         <ul>
            <li>Listing ID # {{item.id}} in the category "{{item.category}} "</li>
            <li>Posted by {{item.getUser('username')}} </li>
            <div class="clear"></div>
        </ul>
        <div class="shortDetails">
            <span class="glyphicon glyphicon-earphone"> 3388-22134</span>
            <br>
            <a href="#">View Details</a>
            <div class="checkbox-inline">
                <label>
                    <input type="checkbox"> Save Ad
                </label>
            </div>
            <div class="checkbox-inline">
                <label>
                    <input type="checkbox"> Compare Ad
                </label>
            </div>
        </div>
    </div>
    <div class="right_details">
        <ul>
            <li>
                <span class="fieldValue fieldValueActive active">{% if item.active==1   %}<span class="active">Active</span>{%else%}<span class="inactive">Inactive</span>{%endif%}</span> 
                and <span class="fieldValue fieldValueModerationStatus approved">{% if item.moderationStatus==1   %}<span class="approved">Approved</span> {%else%}<span class="rejcted">Rejected</span>{%endif%}</span>							</li>
            <li>0 pictures</li>
            <li>0 comments</li>
            <li>{{item.views}} views</li>
            <li>Activated on {% if item.activationDate is defined   %}{{item.activationDate}}{%endif%}</li>
        </ul>
    </div>
<div class="clear"></div>
{% endblock %}