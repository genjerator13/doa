<div class="btn-group-vertical">

    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#eprice">Get ePrice
    </button>
    {% set template= settingsService.getStripped("finance template",{},dealer)%}
    {% if(template=="finance_form_contact_app_employment") %}
        <a class="btn btn-{{ buttonClass }}" data-toggle="modal" href="{{ path("finance_form") }}">Apply for Financing
        </a>
    {% else %}
        <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
                data-target="#finance">Apply for Financing
        </button>
    {% endif %}

    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#contact">Contact us
    </button>
    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#offer">Make an Offer
    </button>
    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#offerTradeIn">Offer Trade In
    </button>
    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#loancalc">Payment Calculator
    </button>
    <button type="button" class="btn btn-{{ buttonClass }}" data-toggle="modal"
            data-target="#testdrive">Schedule a Test Drive
    </button>
</div>
