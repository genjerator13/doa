{% extends 'NumaDOASiteBundle::home-layout.html.twig' %}
{% block content %}

    <div class="login-form">
        
        <form action="{{ path('login_check') }}" method="post">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign In</div>
                    {#<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>
               #} </div>     

                <div class="panel-body" style="padding-top:30px">
                    {% if error %}
                        <div>{{ error.message }}</div>
                    {% endif %}


                    <div class="input-group" style="margin-bottom: 25px">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" id="username" name="_username"  class="form-control" type="text" placeholder="Email" value="{{ last_username }}" placeholder="Username"/>
                    </div>

                    <div class="input-group" style="margin-bottom: 25px">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Password"/>                            
                    </div>
                    <button class="btn btn-success" type="submit">Sign in</button>
                    <a class="btn btn-primary" href="{{ path('buyer_register') }}">Register</a>
                </div>
            </div>
        </form>

    </div>
{% endblock %}
