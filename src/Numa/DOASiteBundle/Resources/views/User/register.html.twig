{% extends 'NumaDOASiteBundle::home-layout.html.twig' %}
{% block content %}
<!-- Nav tabs -->
<h2>Register</h2>
  {% form_theme form 'NumaDOASiteBundle::bootstrap3form.html.twig' %}
                                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                                {{ form_errors(form) }}
<div class="row">
                                    {{ form_row(form.username,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
    </div>
    <div class="row">
                                    {#{{ form_row(form.password,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}#}
        {% for passwordField in form.password %}
            <div class="form-field">

                {{ form_row(passwordField, { 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
            </div>
        {% endfor %}
        </div>
        
        <div class="row">
                                    {{ form_row(form.email,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
            </div> 
        <div class="row">
                                    {{ form_row(form.FirstName,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
            </div> 
                                        <div class="row">
                                    {{ form_row(form.LastName,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
            </div> 
                                        <div class="row">
                                    {{ form_row(form.PhoneNumber,{ 'attr': {'class': 'form-control'},'groupclass':'col-sm-12','class':'input-group  input-group-sm' }) }}
            </div>
                                                    
                                {{ form_row(form._token) }}
                                <button class="btn btn-success" type="submit">Submit</button>
                                <a class="btn btn-primary" href="{{ path('login') }}">Existing users sign-in</a>
{% endblock %}

