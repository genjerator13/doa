<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Featured Ads</h3>
    </div>
    <div class="panel-body">
        {% for item in items %}
            {% set images = item.getImages()%}
            {% set desc = item.getMake()~item.getModel()%}
                <a href="{{path('item_details', {'itemId': item.id, 'description': desc}) }}">{{item.getItemFieldByName('year')}} {{item.getMake()}} {{item.getModel()}}</br>

                    
                {% set image = item.getImages2()|first%}
                {% if image is defined and image is not empty  %}
                    {% if  "http://" not in image.fieldStringValue %}
                        <a href="{{path('items_edit',{'id':item.id})}}"><img  src="{{image.fieldStringValue|imagine_filter('search_image')}}" alt="image" /></a>                              
                    {% else %}
                        <a href="{{path('items_edit',{'id':item.id})}}"><img  src="{{image.fieldStringValue}}" alt="image" width="120px"/></a>                              
                    {%endif %} 
                {%else %}
                    <a href="{{path('items_edit',{'id':item.id})}}"><img  src="{{ asset('images/no_image_available_small.png') }}" alt="image" width="120px"/></a>                              
                {% endif %}    
                    
                    {{price(item.getItemFieldByName('price'))|raw}}
                </a>
        {% endfor %}
    </div>
</div>
                        