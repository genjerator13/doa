<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Featured Ads</h3>
    </div>
    <div class="panel-body">
        {% for item in items %}
            {% set images = item.getImages()%}
            {% set desc = item.getMake()~item.getModel()%}
                <a href="{{path('item_details', {'itemId': item.id, 'description': desc}) }}">{{item.getItemFieldByName('year')}} {{item.getMake()}} {{item.getModel()}}</br>

                    
                {% set image = item.getImages2()|first%}
                {% if images is empty  %}
                    <img alt="No photos" src="{{ asset('images/no_image_available_small.png') }}" />
                {% else %} 
                    {% set image = item.getImages()|first["stringvalue"]%}
                        {% if ('http' not in image) %}
                            <img alt="{{item.getItemFieldByName('year')}} {{desc}}" src="{{image|imagine_filter('search_image')}}" />
                        {% else %}
                            <img alt="{{item.getItemFieldByName('year')}} {{desc}}" src="{{image}}" width="120" height="90"/>                                    
                        {%endif%}
                    </a>

                    {% endif %}
                    
                    {{price(item.getItemFieldByName('price'))|raw}}
                </a>
        {% endfor %}
    </div>
</div>
                        