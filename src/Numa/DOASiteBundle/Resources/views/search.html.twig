{% form_theme form 'NumaDOASiteBundle::bootstrap3form.html.twig' %}
<nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li class="{% if route=='homepage' %}active{% endif %}"><a href="{{ path('homepage') }}">Home</a></li>
            <li class="{% if route=='buyer_login' %}active{% endif %}"><a href="{{ path('buyer_login') }}">Dealer
                    login</a></li>
            <li class="{% if route=='search_advanced' %}active{% endif %}"><a href="{{ path('search_advanced') }}">Advanced
                    Search</a></li>

            <li class="{% if route=='buyer_register' %}active{% endif %}">
                {% if not is_granted('ROLE_USER') and  not is_granted('ROLE_BUSINES') %}
                    <a href="{{ path('buyer_register') }}">Buyer Registration / Sign In</a>
                {% else %}
                    <a class="" href="{{ path('logout') }}"> Log Out </a>
                {% endif %}
            </li>
            {% if app.session.get('dealer_id') is not defined or app.session.get('dealer_id') is empty %}
                <li class="{% if route=='homepage_categories' %}active{% endif %}">
                    <a class="" href="{{ path('homepage_categories') }}">Business Directory</a>
                </li>
                <li class="{% if route=='search_sellers' %}active{% endif %}">
                    <a class="" href="{{ path('search_sellers') }}">Search Sellers</a>
                </li>
            {% endif %}
        </ul>
        <div class="col-md-3 col-xs-3 col-sm-3 col-lg-3">
            {{ form_start(form, {'attr': {'class': 'navbar-form','role':'search'}}) }}
            <div class="input-group">
                {{ form_row(form.text,{ 'attr': {'class': 'form-control'} }) }}
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
            </form>
        </div>

    </div><!-- /.navbar-collapse -->
</nav>

