{% extends 'NumaDOASiteBundle::listing-layout.html.twig' %}
{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', _self] %}
{% block form_label_class -%}
    col-sm-3
{%- endblock form_label_class %}
{% block form_group_class -%}
    col-sm-7
{%- endblock form_group_class %}
{% block content %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    {% set dealer = getDealer() %}
    <div class="page-text">
        {{ displayComponent('page_content',"HTML")|raw }}
    </div>

    {{ form_errors(form) }}
    {{ form_start(form) }}
    {{ form_row(form.cust_name) }}
    {{ form_row(form.cust_last_name) }}

    {{ form_row(form.contact_by,{'label':'Contact Me By'}) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}

    <h4>Trade In Vehicle Information:</h4>
    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.make, { 'label':'Make','label_attr': {'class': 'col-md-5'} }) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.model, {'label':'Model', 'label_attr': {'class': 'col-md-5'} }) }}
        </div>
        <div class="col-md-2 ">
            {{ form_row(form.year, { 'label':'Year','label_attr': {'class': 'col-md-5'} }) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.kilometers, { 'label':'Kilometers','label_attr': {'class': 'col-md-5'} }) }}
        </div>
    </div>
    {{ form_row(form.accessories,{'label':'Condition & Reconditioning Required'}) }}
    {{ form_row(form.comment,{'label':'Accident History'}) }}
    {{ form_row(form.special) }}
    <h4>Upload images of your trade:</h4>
    {{ form_row(form.image1src) }}
    {{ form_row(form.image2src) }}
    {{ form_row(form.image3src) }}

    <div class="g-recaptcha" data-sitekey="6LcdLSoTAAAAAIzrwX5_EqelrxwlTu8r_eMhjUS2"></div>
    {{ form_row(form.submit) }}
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}